// Ã€ copier dans <head>

<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.quantity').forEach(function(quantityWrapper) {
        var input = quantityWrapper.querySelector('.qty');
        var btnMinus = document.createElement('button');
        var btnPlus = document.createElement('button');

        btnMinus.type = 'button';
        btnPlus.type = 'button';

        btnMinus.className = 'minus';
        btnPlus.className = 'plus';

        btnMinus.textContent = '-';
        btnPlus.textContent = '+';

        btnMinus.addEventListener('click', function() {
            var value = parseInt(input.value) - 1;
            input.value = value > 0 ? value : 0;
            input.dispatchEvent(new Event('change'));
        });

        btnPlus.addEventListener('click', function() {
            input.value = parseInt(input.value) + 1;
            input.dispatchEvent(new Event('change'));
        });

        quantityWrapper.insertBefore(btnMinus, input);
        quantityWrapper.appendChild(btnPlus);
    });
});
</script>



/* Plus and less button product */

