function ajouter_widget_video_dashboard() {
    wp_add_dashboard_widget(
        'video_dashboard_widget',          // ID du widget
        'ðŸŽ¥ Tutoriel',               // Titre affichÃ©
        'afficher_video_dashboard_widget'  // Fonction d'affichage
    );
}

function afficher_video_dashboard_widget() {
    echo '<div style="text-align:center">';
    echo '<iframe src="" width="100%" height="315" allow="autoplay"></iframe>';
    echo '</div>';
}

add_action('wp_dashboard_setup', 'ajouter_widget_video_dashboard');
